---
import { EMAIL } from "@/lib/constant";

type Props = {
  title: string;
  descriptions: string[];
};

const { title, descriptions } = Astro.props;

const links = [
  {
    label: "GitHub",
    url: "https://github.com/kanaru-ssk",
  },
  {
    label: "X",
    url: "https://x.com/kanaru_ssk",
  },
  {
    label: "note",
    url: "https://note.com/kanaru_ssk",
  },
];
---

<>
  <img
    alt="avatar"
    class="avatar"
    fetchpriority="high"
    height="256px"
    src="/avatar.webp"
    width="256px"
  />
  <h1>{title}</h1>
  <p class="links">
    {
      links.map((link) => (
        <a href={link.url} rel="noopener noreferrer" target="_blank">
          {link.label}
        </a>
      ))
    }
    <a href={`mailto:${EMAIL}`}>
      {EMAIL}
    </a>
  </p>
  <p>
    {
      descriptions.map((description, i) => (
        <>
          {i !== 0 && <br />}
          {description}
        </>
      ))
    }
  </p>
</>
