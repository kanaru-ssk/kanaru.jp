---
export function getStaticPaths() {
  return [{ params: { lang: "en" } }, { params: { lang: "ja" } }];
}

import BaseLayout from "@/layouts/BaseLayout.astro";
import NotFoundLayout from "@/layouts/NotFoundLayout.astro";
import { getDiffYear } from "@/lib/date";

const { lang } = Astro.params;
const title = "佐々木 哉瑠";
const yearOfExperience = getDiffYear(new Date("2021-02"), new Date());
const descriptions = [
  "フリーランスのソフトウェアエンジニアです。",
  `実務経験 ${yearOfExperience} 年目で、主にGoogleCloud, Go, TypeScript, Next.jsを使用しています。`,
  "宮城大学の特任助教もしています。",
];
---

<BaseLayout lang={lang} title={title} descriptions={descriptions}>
  <NotFoundLayout />
</BaseLayout>
