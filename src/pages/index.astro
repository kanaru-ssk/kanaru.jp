---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HomeLayout from "@/layouts/HomeLayout.astro";
import { getDiffYear } from "@/lib/date";

const lang = "en";
const title = "Kanaru Sasaki";
const yearOfExperience = getDiffYear(new Date("2021-02"), new Date());
const descriptions = [
  "I'm a freelance software engineer based in Japan (remote).",
  `With ${yearOfExperience} years of professional experience, I mainly work with Google Cloud, Go, TypeScript, and Next.js.`,
  "I'm also an assistant professor at Miyagi University.",
];
---

<BaseLayout lang={lang} title={title} descriptions={descriptions}>
  <HomeLayout title={title} descriptions={descriptions} />
</BaseLayout>
