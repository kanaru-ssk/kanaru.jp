---
import BaseLayout from "@/layouts/BaseLayout.astro";
import HomeLayout from "@/layouts/HomeLayout.astro";
import { getDiffYear } from "@/lib/date";
import { DEFAULT_LANG, getDictionary } from "@/lib/lang";

const yearOfExperience = getDiffYear(new Date("2021-02"), new Date());
const { title, descriptions } = getDictionary(DEFAULT_LANG, yearOfExperience);
---

<BaseLayout descriptions={descriptions} lang={DEFAULT_LANG} title={title}>
  <HomeLayout descriptions={descriptions} title={title} />
</BaseLayout>
