		"next": "^15.3.5",
		"postcss": "^8.5.6",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tailwindcss": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.1",
		"@types/node": "^24.0.12",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"serve": "^14.2.4",
		"typescript": "^5.8.3"
	}
}
