{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"lib": ["DOM", "DOM.Iterable", "esnext"],
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"paths": { "@/*": ["./src/*"] },
		"plugins": [{ "name": "next" }]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
